package RepetitionAndSelection;

import java.util.Scanner;

public class BankPassword2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		
		for (int i=2;i>=0;i--) {
			System.out.print("Key in your device password: ");
			int a = sc.nextInt();
			int pass = 31801;
			
			if(a == pass) {
				System.out.println("Your password is correct.");
				
				break;
			} else
				
				System.out.print("Your password is incorrect! You have "+i+" chance. Please key in again: ");
				System.out.println();
				
				if(i == 0) {
					System.out.print("Sorry, you have to wait for 5 minutes to key in your password again!");
				}
			
		}
	}

}
